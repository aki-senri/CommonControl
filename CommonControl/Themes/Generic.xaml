<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:CommonControl.Controls">

    <ControlTemplate x:Key="DefaultSelectTemplate" TargetType="{x:Type local:CustomComboBox}">
        <ComboBox
            x:Name="PART_ComboBox"
            Foreground="{TemplateBinding Foreground}"
            IsEditable="False"
            ItemsSource="{TemplateBinding ItemsSource}"
            SelectedIndex="{TemplateBinding SelectedIndex}"
            SelectedItem="{TemplateBinding SelectedItem}" />
    </ControlTemplate>
    <Style BasedOn="{StaticResource {x:Type ComboBox}}" TargetType="{x:Type local:CustomComboBox}">
        <Setter Property="IsDefaultIndex" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:CustomComboBox}">
                    <Border
                        x:Name="PART_Border"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <ComboBox
                            x:Name="PART_ComboBox"
                            Foreground="{TemplateBinding Foreground}"
                            IsEditable="False"
                            ItemsSource="{TemplateBinding ItemsSource}"
                            SelectedIndex="{TemplateBinding SelectedIndex}"
                            SelectedItem="{TemplateBinding SelectedItem}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsDefaultIndex" Value="False">
                            <Setter TargetName="PART_Border" Property="BorderBrush" Value="Red" />
                            <Setter TargetName="PART_Border" Property="BorderThickness" Value="1" />
                            <Setter TargetName="PART_ComboBox" Property="Foreground" Value="Red" />
                        </Trigger>
                        <Trigger Property="IsDefaultIndex" Value="True">
                            <Setter TargetName="PART_Border" Property="BorderBrush" Value="Gray" />
                            <Setter TargetName="PART_Border" Property="BorderThickness" Value="0" />
                            <Setter TargetName="PART_ComboBox" Property="Foreground" Value="Black" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsDefaultIndex" Value="True">
                <Setter Property="Template" Value="{StaticResource DefaultSelectTemplate}" />
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
